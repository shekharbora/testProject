<div class="card">
  <div class="card-body"><h2>Members</h2><%= link_to 'Join as a member',new_user_path%><hr/>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Website Url</th>
        <th scope="col">Friends</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user|%>
      <tr>      
        <td><%= link_to user.name, user_profile_path(user)%></td>
        <td><%= user.short%></td>
        <td><%= user.friends.count%></td>
      </tr>
      <%end%>
    </tbody>
  </table>
  </div>
</div>
